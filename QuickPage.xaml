                            <TextBlock Text=" ₽" Foreground="DarkGreen" FontWeight="Bold" FontSize="14" TextAlignment="Left"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                            <TextBlock Text="Прибыль:" FontSize="14" Width="150" TextAlignment="Left"/>
                            <TextBlock x:Name="TextBlockZSdelkiSummaPribil" Margin="10,0,0,0" Foreground="DarkGreen" FontWeight="Bold" FontSize="14" TextAlignment="Right" Width="94"/>
                            <TextBlock Text=" ₽" Foreground="DarkGreen" FontWeight="Bold" FontSize="14" TextAlignment="Left"/>
                        </StackPanel>

                        <ListView Name="ZSdelkiList" ItemsSource="{x:Bind ZSdelki}" Margin="10,20,0,0" IsItemClickEnabled="True" ItemClick="ZSdelkiList_ItemClick">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="data:ZSdelkiData">
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <TextBlock FontSize="13" Text="{x:Bind KONTRNAME}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,0,0,0" Width="150" TextWrapping="WrapWholeWords"/>
                                        <TextBlock FontSize="13" Text="{x:Bind SUMMAITOGO}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,0,0,0" Width="70" TextWrapping="WrapWholeWords" TextAlignment="Right"/>
                                        <TextBlock FontSize="13" Text="{x:Bind VALUTA}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5,0,0,0" TextWrapping="WrapWholeWords"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    
                    </StackPanel>
                </ScrollViewer>

            </StackPanel>
            

            <StackPanel x:Name="StackPanelData2" RelativePanel.Below="StackPanelData1" Margin="20,20,0,0" Orientation="Horizontal">

                <ScrollViewer x:Name="StackPanelData2SV1" Width="300" Height="300" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="BlanchedAlmond" ScrollViewer.VerticalScrollMode="Auto">
                    <StackPanel Orientation="Vertical">
                        <TextBlock x:Name="TextBlockSummaryData1" Text="ЗАКАНЧИВАЮЩИЕСЯ ТОВАРЫ НА МИНИ-СКЛАДЕ" Margin="10,10,0,0" FontWeight="SemiBold"/>

                        <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                            <TextBlock Text="Cумма закупки:" FontSize="14"/>
                            <TextBlock x:Name="TextBlockSkladTovariSumma" Margin="10,0,0,0" Foreground="DarkGreen" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text=" ₽" Foreground="DarkGreen" FontWeight="Bold" FontSize="14" />
                            <Button Content="" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="15,-4,0,0" Background="NavajoWhite" FontWeight="ExtraBold">
                                <Button.Flyout>
                                    <Flyout x:Name="HelpBoxTovari">
                                        <Flyout.Content>
                                            <StackPanel Orientation="Vertical" MaxWidth="300">
                                                <TextBlock Text="Стоимость закупки заканчивающегося товара рассчитывается как разница между необходимым количеством товара на складе и имеющимся количеством товара на складе, умноженная на себестоимость единицы товара." TextWrapping="WrapWholeWords" />
                                                <TextBlock Text="Проще говоря: " TextWrapping="WrapWholeWords" Margin="0,10,0,0" FontWeight="SemiBold"/>
                                                <TextBlock Text="Стоимость закупки: S" TextWrapping="WrapWholeWords" Margin="0,10,0,0"/>
                                                <TextBlock Text="Необходимое кол-во: N" TextWrapping="WrapWholeWords" />
                                                <TextBlock Text="Имеющееся кол-во: E" TextWrapping="WrapWholeWords" />
                                                <TextBlock Text="Себестоимость ед.: M" TextWrapping="WrapWholeWords" />
                                                <TextBlock Text="S=(N-E)*M" TextWrapping="WrapWholeWords" Margin="0,12,0,0" FontWeight="SemiBold"/>
                                                <TextBlock Text="В расчет берутся только те товары из раздела &quot;Мини-склад&quot;, где указаны все значения (себестоимость за ед, необходимое кол-во, имеющееся кол-во)." TextWrapping="WrapWholeWords" Margin="0,12,0,0"/>
                                                <Button x:Name="HelpBoxTovariButton" Content="Ок, понятно" Margin="0,22,0,0" Click="HelpBoxTovariButton_Click" />
                                            </StackPanel>
                                        </Flyout.Content>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>

                        <ListView Name="TovariList" ItemsSource="{x:Bind Tovari}" Margin="10,20,0,0" IsItemClickEnabled="True" ItemClick="TovariList_ItemClick">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="data:SkladData">
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <TextBlock FontSize="13" Text="{x:Bind TOVARNAME}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,0,0,0" Width="150" TextWrapping="WrapWholeWords"/>
                                        <TextBlock FontSize="13" Text="{x:Bind KOLICHESTVO}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="7,0,0,0" Width="60" TextWrapping="WrapWholeWords"/>
                                        <TextBlock FontSize="13" Text="{x:Bind EDIZM}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5,0,0,0" Width="40" TextWrapping="WrapWholeWords"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                    </StackPanel>
                </ScrollViewer>


                <ScrollViewer x:Name="StackPanelData2SV2" Width="300" Height="300" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="LavenderBlush" ScrollViewer.VerticalScrollMode="Auto" Margin="20,0,0,0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock x:Name="TextBlockSummaryData21" Text="ВСЕ НЕЗАВЕРШЕННЫЕ СДЕЛКИ" Margin="10,10,0,0" FontWeight="SemiBold"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                            <TextBlock Text="Общая сумма сделок:" FontSize="14" Width="150" TextAlignment="Left"/>
                            <TextBlock x:Name="TextBlockNZSdelkiSumma" Margin="10,0,0,0" Foreground="DarkGreen" FontWeight="Bold" FontSize="14" TextAlignment="Right" Width="94"/>
                            <TextBlock Text=" ₽" Foreground="DarkGreen" FontWeight="Bold" FontSize="14" TextAlignment="Left"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                            <TextBlock Text="Ожидаемая прибыль:" FontSize="14" Width="150" TextAlignment="Left"/>
                            <TextBlock x:Name="TextBlockNZSdelkiSummaPribil" Margin="10,0,0,0" Foreground="DarkGreen" FontWeight="Bold" FontSize="14" TextAlignment="Right" Width="94"/>
                            <TextBlock Text=" ₽" Foreground="DarkGreen" FontWeight="Bold" FontSize="14" TextAlignment="Left"/>
                        </StackPanel>

                        <ListView Name="NZSdelkiList" ItemsSource="{x:Bind NZSdelki}" Margin="10,20,0,0" IsItemClickEnabled="True" ItemClick="NZSdelkiList_ItemClick">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="data:NZSdelkiData">
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <TextBlock FontSize="13" Text="{x:Bind KONTRNAME}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,0,0,0" Width="150" TextWrapping="WrapWholeWords"/>
                                        <TextBlock FontSize="13" Text="{x:Bind SUMMAITOGO}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,0,0,0" Width="70" TextWrapping="WrapWholeWords" TextAlignment="Right"/>
                                        <TextBlock FontSize="13" Text="{x:Bind VALUTA}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5,0,0,0" TextWrapping="WrapWholeWords"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                    </StackPanel>
                </ScrollViewer>

            </StackPanel>

            <StackPanel x:Name="StackPanelData3" RelativePanel.Below="TextBlockINTRO" RelativePanel.RightOf="StackPanelData1" Margin="20,20,0,0" Orientation="Vertical" Width="300" Height="620" Background="Azure">
                <TextBlock x:Name="TextBlockSummaryData31" Text="СТАТУСЫ СДЕЛОК" Margin="10,10,0,0" FontWeight="SemiBold"/>

                <Charting:Chart x:Name="PieChart" Width="496" Height="300" VerticalAlignment="Top">
                    <Charting:PieSeries Margin="0" IndependentValuePath="DataName" DependentValuePath="DataValue"/>
                    <Charting:Chart.Palette>
                        <Charting:ResourceDictionaryCollection>
                            <ResourceDictionary>
                                <Style x:Key="DataPointStyle" TargetType="Control">
                                    <Setter Property="Background" Value="White" />
                                </Style>
                            </ResourceDictionary>
                            <ResourceDictionary>
                                <Style x:Key="DataPointStyle" TargetType="Control">
                                    <Setter Property="Background" Value="LightYellow" />
                                </Style>
                            </ResourceDictionary>
                            <ResourceDictionary>
                                <Style x:Key="DataPointStyle" TargetType="Control">
                                    <Setter Property="Background" Value="SkyBlue" />
                                </Style>
                            </ResourceDictionary>
                            <ResourceDictionary>
                                <Style x:Key="DataPointStyle" TargetType="Control">
                                    <Setter Property="Background" Value="MistyRose" />
                                </Style>
                            </ResourceDictionary>
                            <ResourceDictionary>
                                <Style x:Key="DataPointStyle" TargetType="Control">
                                    <Setter Property="Background" Value="OliveDrab" />
                                </Style>
                            </ResourceDictionary>
                            <ResourceDictionary>
                                <Style x:Key="DataPointStyle" TargetType="Control">
                                    <Setter Property="Background" Value="LightSalmon" />
                                </Style>
                            </ResourceDictionary>
                            <ResourceDictionary>
                                <Style x:Key="DataPointStyle" TargetType="Control">
                                    <Setter Property="Background" Value="YellowGreen" />
                                </Style>
                            </ResourceDictionary>
                            <ResourceDictionary>
                                <Style x:Key="DataPointStyle" TargetType="Control">
                                    <Setter Property="Background" Value="OrangeRed" />
                                </Style>
                            </ResourceDictionary>
                        </Charting:ResourceDictionaryCollection>
                    </Charting:Chart.Palette>
                </Charting:Chart>


                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                    <Rectangle Width="20" Height="20" Fill="White"/>
                    <TextBlock Text="Без статуса:" Width="180" Margin="20,0,0,0" FontSize="14"/>
                    <TextBlock x:Name="TextBlockSdelkaStatus1" Width="40" FontWeight="SemiBold" FontSize="14" Margin="12,0,0,0" TextAlignment="Right"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Rectangle Width="20" Height="20" Fill="LightYellow"/>
                    <TextBlock Text="Сделано предложение:" Width="180" Margin="20,0,0,0" FontSize="14" />
                    <TextBlock x:Name="TextBlockSdelkaStatus2" Width="40" FontWeight="SemiBold" FontSize="14" Margin="12,0,0,0" TextAlignment="Right"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Rectangle Width="20" Height="20" Fill="SkyBlue"/>
                    <TextBlock Text="Заключен договор, выставлен счет:" Width="180" TextWrapping="WrapWholeWords" Margin="20,0,0,0" FontSize="14"/>
                    <TextBlock x:Name="TextBlockSdelkaStatus3" Width="40" FontWeight="SemiBold" FontSize="14" Margin="12,0,0,0" TextAlignment="Right"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Rectangle Width="20" Height="20" Fill="MistyRose"/>
                    <TextBlock Text="В работе:" Width="180" Margin="20,0,0,0" FontSize="14"/>
                    <TextBlock x:Name="TextBlockSdelkaStatus4" Width="40" FontWeight="SemiBold" FontSize="14" Margin="12,0,0,0" TextAlignment="Right"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Rectangle Width="20" Height="20" Fill="OliveDrab"/>
                    <TextBlock Text="Исполнена, ожидает подписания актов/накладных:" Width="180" TextWrapping="WrapWholeWords" Margin="20,0,0,0" FontSize="14"/>
                    <TextBlock x:Name="TextBlockSdelkaStatus5" Width="40" FontWeight="SemiBold" FontSize="14" Margin="12,0,0,0" TextAlignment="Right"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Rectangle Width="20" Height="20" Fill="LightSalmon"/>
                    <TextBlock Text="Ожидание оплаты:" Width="180" Margin="20,0,0,0" FontSize="14"/>
                    <TextBlock x:Name="TextBlockSdelkaStatus6" Width="40" FontWeight="SemiBold" FontSize="14" Margin="12,0,0,0" TextAlignment="Right"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Rectangle Width="20" Height="20" Fill="YellowGreen"/>
                    <TextBlock Text="Завершена:" Width="180" Margin="20,0,0,0" FontSize="14"/>
                    <TextBlock x:Name="TextBlockSdelkaStatus7" Width="40" FontWeight="SemiBold" FontSize="14" Margin="12,0,0,0" TextAlignment="Right"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Rectangle Width="20" Height="20" Fill="OrangeRed"/>
                    <TextBlock Text="Договор расторгнут:" Width="180" Margin="20,0,0,0" FontSize="14"/>
                    <TextBlock x:Name="TextBlockSdelkaStatus8" Width="40" FontWeight="SemiBold" FontSize="14" Margin="12,0,0,0" TextAlignment="Right"/>
                </StackPanel>
            </StackPanel>

