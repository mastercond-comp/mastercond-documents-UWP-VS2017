            <ScrollViewer x:Name="NewsScrollViewer" RelativePanel.Below="TextBlockNEWS" Margin="20,20,0,0" Height="400" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto">
                
                <StackPanel x:Name="TextBlockNEWSOpisanie" Orientation="Vertical">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="2.8.18" FontWeight="SemiBold" Width="45" />
                        <TextBlock x:Name="Version2818" Text="Добавлена возможность просмотра информации о товарах и сделках в разделе &quot;Сводные данные&quot;." Margin="15,0,0,0" TextWrapping="WrapWholeWords"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <TextBlock Text="2.8.17" FontWeight="SemiBold" Width="45" />
                        <TextBlock x:Name="Version2817" Text="Для защиты содержимого приложения введен обязательный при входе пин-код." Margin="15,0,0,0" TextWrapping="WrapWholeWords"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <TextBlock Text="2.8.16" FontWeight="SemiBold" Width="45" />
