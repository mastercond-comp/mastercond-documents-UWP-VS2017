                        <StackPanel Orientation="Horizontal" Margin="10,20,0,0">
                            <TextBlock Text="ПРИБЫЛЬ:" FontWeight="SemiBold" HorizontalAlignment="Left" FontSize="13" Width="100" TextAlignment="Left"/>
